{
  "name": "codepilot",
  "displayName": "codepilot",
  "description": "Coding assistant with customizable LLM",
  "version": "0.5.0",
  "publisher": "banya",
  "engines": {
    "vscode": "^1.85.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DAIOSFoundation/codepilot"
  },
  "categories": [
    "LLM",
    "AI",
    "Chat",
    "Code Editor",
    "VSCode Plugin"
  ],
  "activationEvents": [
    "onView:codepilot.chatView",
    "onCommand:codepilot.openSettingsPanel",
    "onCommand:codepilot.openLicensePanel",
    "onCommand:codepilot.openCustomizingPanel",
    "onCommand:codepilot.openChatView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewContainers": {
      "activitybar": [
        {
          "id": "codepilot",
          "title": "CodePilot",
          "icon": "$(question)"
        }
      ]
    },
    "views": {
      "codepilot": [
        {
          "id": "codepilot.chatView",
          "name": "Chat",
          "type": "webview",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "commands": [
      {
        "command": "codepilot.openSettingsPanel",
        "title": "Setting"
      },
      {
        "command": "codepilot.openLicensePanel",
        "title": "License"
      },
      {
        "command": "codepilot.openCustomizingPanel",
        "title": "Customizing"
      },
      {
        "command": "codepilot.openChatView",
        "title": "Open Banya Chat"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codepilot.openSettingsPanel",
          "when": "view == codepilot.chatView",
          "group": "navigation",
          "order": 1,
          "icon": "$(settings-gear)",
          "title": "Setting"
        },
        {
          "command": "codepilot.openLicensePanel",
          "when": "view == codepilot.chatView",
          "group": "navigation",
          "order": 2,
          "icon": "$(book)",
          "title": "License"
        },
        {
          "command": "codepilot.openCustomizingPanel",
          "when": "view == codepilot.chatView",
          "group": "navigation",
          "order": 3,
          "icon": "$(paintbrush)",
          "title": "Customizing"
        }
      ]
    },
    "configuration": {
      "title": "CodePilot Configuration",
      "properties": {
        "codepilot.sourcePaths": {
          "type": "array",
          "default": [],
          "description": "CodePilot이 AI 응답을 생성할 때 참조할 소스 코드 파일 및 디렉토리 경로 목록을 지정합니다. 여기에 지정된 모든 파일과 폴더의 내용이 AI에게 컨텍스트 정보로 제공될 수 있습니다.",
          "items": {
            "type": "string"
          }
        },
        "codepilot.apiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini API Key를 설정합니다. Secret Storage에 안전하게 저장됩니다.",
          "scope": "resource",
          "markdownDescription": "Gemini API Key를 설정합니다. 이는 VS Code의 Secret Storage에 안전하게 저장되며, 확장이 이 키를 사용하여 Gemini API에 접근합니다. [여기](https://aistudio.google.com/app/apikey)에서 API 키를 얻을 수 있습니다."
        },
        "codepilot.autoUpdateFiles": {
          "type": "boolean",
          "default": false,
          "description": "Enable or disable automatic updating of files based on LLM's code block suggestions. If disabled, you will be prompted before updating.",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@babel/core": "^7.27.3",
    "@babel/preset-env": "^7.27.2",
    "@google/generative-ai": "^0.14.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "babel-loader": "^10.0.0",
    "dompurify": "^3.2.6",
    "eslint": "^9.25.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "markdown-it": "^14.1.0"
  }
}
{
  "name": "codepilot",
  "displayName": "codepilot",
  "description": "Coding assistant with customizable LLM",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onView:codepilot.chatView",
    "onCommand:codepilot.openSettingsPanel",
    "onCommand:codepilot.openLicensePanel",
    "onCommand:codepilot.openCustomizingPanel"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewContainers": {
      "activitybar": [
        {
          "id": "codepilot",
          "title": "CodePilot",
          "icon": "media/codepilot.svg"
        }
      ]
    },
    "views": {
      "codepilot": [
        {
          "id": "codepilot.chatView",
          "name": "Chat",
          "type": "webview",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "commands": [
      {
        "command": "codepilot.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "codepilot.openSettingsPanel",
        "title": "Open Settings"
      },
      {
        "command": "codepilot.openLicensePanel",
        "title": "Open License"
      },
      {
        "command": "codepilot.openCustomizingPanel",
        "title": "Open Customizing"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codepilot.openSettingsPanel",
          "when": "view == codepilot.chatView",
          "group": "navigation",
          "order": 1,
          "icon": "$(settings-gear)"
        },
        {
          "command": "codepilot.openLicensePanel",
          "when": "view == codepilot.chatView",
          "group": "navigation",
          "order": 2,
          "icon": "$(book)"
        },
        {
          "command": "codepilot.openCustomizingPanel",
          "when": "view == codepilot.chatView",
          "group": "navigation",
          "order": 3,
          "icon": "$(paintbrush)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}